<div class="row gpCard">
  <div class="col s12 m6 l6 push-l3 hide-on-large-only">
    <div class="card">
      <div class="card-image">
        <img src="{{game.thumbnail}}">
      </div>
      <div class="card-content black cyan-text accent-1 center-align">
        <span class="card-title black pink-text lighten-5">{{game.title}}</span>
        <div class="card-content black center-align">
          {{#eq game.rating_avg "1"}}
          <i class="material-icons pink-text lighten-5">whatshot</i>
          {{/eq}}
          {{#eq game.rating_avg "2"}}
          <i class="material-icons pink-text lighten-5">whatshot</i>
          <i class="material-icons pink-text lighten-5">whatshot</i>
          {{/eq}}
          {{#eq game.rating_avg "3"}}
          <i class="material-icons pink-text lighten-5">whatshot</i>
          <i class="material-icons pink-text lighten-5">whatshot</i>
          <i class="material-icons pink-text lighten-5">whatshot</i>
          {{/eq}}
          {{#eq game.rating_avg "4"}}
          <i class="material-icons pink-text lighten-5">whatshot</i>
          <i class="material-icons pink-text lighten-5">whatshot</i>
          <i class="material-icons pink-text lighten-5">whatshot</i>
          <i class="material-icons pink-text lighten-5">whatshot</i>
          {{/eq}}
          {{#eq game.rating_avg "5"}}
          <i class="material-icons icons pink-text lighten-5">whatshot</i>
          <i class="material-icons pink-text lighten-5">whatshot</i>
          <i class="material-icons pink-text lighten-5">whatshot</i>
          <i class="material-icons pink-text lighten-5">whatshot</i>
          <i class="material-icons pink-text lighten-5">whatshot</i>
          {{/eq}}
          <div class="black">
            <a class="waves-effect waves-light btn modal-trigger pink pulse" href="#modal1">Review this game!</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

