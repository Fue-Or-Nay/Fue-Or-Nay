<a href="/game/{{id}}">
    <div class="col l3 hide-on-small-only">
        <div class="gameBox game-card">
            <div class="card center-align hoverable">
                <div class="card-image center-align">
                    <img class="gcImage" src="/Images/{{thumbnail}}">
                </div>
                <div class="card-title black pink-text lighten-5">{{title}}</div>
                <div class="card-content black">
                    {{#eq rating_avg "1"}}
                    <i class="material-icons pink-text lighten-5">whatshot</i>
                    {{/eq}}
                    {{#eq rating_avg "2"}}
                    <i class="material-icons pink-text lighten-5">whatshot</i>
                    <i class="material-icons pink-text lighten-5">whatshot</i>
                    {{/eq}}
                    {{#eq rating_avg "3"}}
                    <i class="material-icons pink-text lighten-5">whatshot</i>
                    <i class="material-icons pink-text lighten-5">whatshot</i>
                    <i class="material-icons pink-text lighten-5">whatshot</i>
                    {{/eq}}
                    {{#eq rating_avg "4"}}
                    <i class="material-icons pink-text lighten-5">whatshot</i>
                    <i class="material-icons pink-text lighten-5">whatshot</i>
                    <i class="material-icons pink-text lighten-5">whatshot</i>
                    <i class="material-icons pink-text lighten-5">whatshot</i>
                    {{/eq}}
                    {{#eq rating_avg "5"}}
                    <i class="material-icons pink-text lighten-5">whatshot</i>
                    <i class="material-icons pink-text lighten-5">whatshot</i>
                    <i class="material-icons pink-text lighten-5">whatshot</i>
                    <i class="material-icons pink-text lighten-5">whatshot</i>
                    <i class="material-icons pink-text lighten-5">whatshot</i>
                    {{/eq}}
                </div>
            </div>
        </div>
    </div>
</a>