<div class="section">
    <div class="gRev center-align">
        <div class="card black">
            <div class="card-content">
                <span class="gHead card-title">{{review_title}}</span>
                <p>
                    {{description}}
                </p>
            </div>
            <div class="revFS">
                <i class="material-icons pink-text lighten-5">whatshot</i>
                <i class="material-icons pink-text lighten-5">whatshot</i>
                <i class="material-icons pink-text lighten-5">whatshot</i>
            </div>
            <div class="card-action">
                <a class="unRev pink-text lighten-5" href="#">{{user.username}}</a>
                <p>{{creation_date}}</p>
            </div>
            <div class="card-action">
                <p>Was this review helpful?</p>
                <button><i class="material-icons tiny" id="helpful">thumb_up</i>{{helpful}}</button>
                <button><i class="material-icons tiny" id="not_helpful">thumb_down</i>{{not_helpful}}</button>
            </div>
        </div>
    </div>
</div>