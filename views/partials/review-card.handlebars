<div class="section">
    <div class="gRev center-align">
        <div class="card black">
            <div class="card-content">
                <span class="gHead card-title">{{review_title}}</span>
                <p>
                    {{description}}
                </p>
            </div>
            <div class="revFS">
                {{#eq rating_avg "1"}}
                <i class="material-icons pink-text lighten-5">whatshot</i>
                {{/eq}}
                {{#eq rating_avg "2"}}
                <i class="material-icons pink-text lighten-5">whatshot</i>
                <i class="material-icons pink-text lighten-5">whatshot</i>
                {{/eq}}
                {{#eq rating_avg "3"}}
                <i class="material-icons pink-text lighten-5">whatshot</i>
                <i class="material-icons pink-text lighten-5">whatshot</i>
                <i class="material-icons pink-text lighten-5">whatshot</i>
                {{/eq}}
                {{#eq rating_avg "4"}}
                <i class="material-icons pink-text lighten-5">whatshot</i>
                <i class="material-icons pink-text lighten-5">whatshot</i>
                <i class="material-icons pink-text lighten-5">whatshot</i>
                <i class="material-icons pink-text lighten-5">whatshot</i>
                {{/eq}}
                {{#eq rating_avg "5"}}
                <i class="material-icons pink-text lighten-5">whatshot</i>
                <i class="material-icons pink-text lighten-5">whatshot</i>
                <i class="material-icons pink-text lighten-5">whatshot</i>
                <i class="material-icons pink-text lighten-5">whatshot</i>
                <i class="material-icons pink-text lighten-5">whatshot</i>
                {{/eq}}
            </div>
            <div class="card-action">
                <a class="unRev pink-text lighten-5" href="#">{{user.username}}</a>
                <p>{{creation_date}}</p>
            </div>
