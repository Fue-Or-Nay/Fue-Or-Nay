<main>
    <!-- Game Card -->
  <h1>{{game.title}}</h1>
  <div class="row">
    <div class="col s12 m6">
      <div class="card">
        <div class="card-image">
          <img src="/Images/supermario64.jpg">
          <span class="card-title">Available On: {{#each game.consoles}} [{{this.name}}] {{/each}}</span>
          <span class="card-content">Release Date: {{game.release_date}}</span>
          <a class="btn-floating halfway-fab waves-effect waves-light red modal-trigger" href="#modal1"><i
              class="material-icons">thumbs_up_down</i></a>
        </div>
        <div class="card-content">
          <i class="material-icons">whatshot</i>
          <i class="material-icons">whatshot</i>
          <i class="material-icons">whatshot</i>
          <i class="material-icons">whatshot</i>
          <i class="material-icons">whatshot</i>
        </div>
      </div>
    </div>
  </div>
  <!-- Modal Structure -->
  <div id="modal1" class="modal">
    <div class="modal-content">
      <h4>Fue or Nay?</h4>
      <p>Write a review for this game!</p>
    </div>
    <form action="#">
      <p>
      <h5>Which console?</h5>
      <div class="input-field col s12">
        <select multiple>
          <option value="1">Nintendo 64</option>
        </select>
      </div>
      <!--Flame rating-->
      <h5>How fuego was this game tho?</h5>
      <ul class="rate-area row">
        <a class="waves-effect waves-teal btn-flat"><i class="material-icons">whatshot</i></a>
        <a class="waves-effect waves-teal btn-flat"><i class="material-icons">whatshot</i></a>
        <a class="waves-effect waves-teal btn-flat"><i class="material-icons">whatshot</i></a>
        <a class="waves-effect waves-teal btn-flat"><i class="material-icons">whatshot</i></a>
        <a class="waves-effect waves-teal btn-flat"><i class="material-icons">whatshot</i></a>
      </ul>
      <!--Write review-->
      <h5>Tell us why!</h5>
      <div class="row">
        <form class="col s12">
          <div class="row">
            <div class="input-field col s12">
              <textarea id="textarea2" class="materialize-textarea" data-length="120"></textarea>
              <label for="textarea2">Write Your Review Here!</label>
            </div>
          </div>
        </form>
      </div>
      </p>
      <div class="modal-footer">
        <a href="#!" class="modal-close waves-effect waves-green btn-flat" id="submitReview">Submit Review</a>
      </div>
  </div>
  <div>
      {{!-- Review Section --}}
    <h3>User Reviews</h3>
    <a class="row" href="#">See all 2 reviews<i class="material-icons">chevron_right</i></a>
  </div>
  {{#each game.reviews}}
  {{> game-reviews}}
  {{/each}}
</main>